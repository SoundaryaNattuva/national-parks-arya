<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/new.css"/>
<%- include('../partials/nav') %>

<div id="createNewContainer">
  <div id="headerSection">
    <h1>
      <img id="createNewHeader" src="https://i.imgur.com/jDtUGYa.png">
    </h1>
  </div>
  <div id="forumContainer">  
    <form action="/parks" method="POST">
      <label id="park" class="selections">Park:
        <select name="parkName" id="nameDropDown">
          <option>Mount Rainier</option>
          <option>Rocky Mountain</option>
          <option>Sequoia</option>
          <option>Acadia</option>
          <option>Zion</option>
        </select>
      </label>
        <label id="date" class="selections">Date:
          <input type="date" name = "date">
        </label>
        <label id="route" class="selections">Route:
          <input id="routeInput" type="text" name="route">
        </label>
        <label id="elevation" class="selections">Elevation:
          <input type="number" name="elevation">
        </label>
        <label id="companions" class="selections">Companion(s):
          <input id="companionsInput" type="text" name="companion">
        </label>
        <label id="wildlife" class="selections">Wildlife:
          <input id="wildlifeInput" type="text" name="wildlife">
        </label>
        <label id="grub" class="selections">Trail Grub:
          <input id="grubInput" type="text" name="trailGrub">
        </label>
        <label id="img" class="selections">Upload Images:
          <input id="imgInput" type="url" name="imageUrls">
        </label>
        <label id="content" class="selections">Post:
          <input id="contentBox" type="text" name="postContent">
        </label>
      <div>
        <br><button class="createPost"> Create Post </button>
      </div>

    </form>
  </div>
</div>

<%- include('../partials/footer') %>